<%= stylesheet_link_tag 'signup' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <header class="signup-header">
    <a href="/users/sign_in" class="header-loginnnn">
      < Login
    </a>

    <h2 class="header-title">
      REGISTER
    </h2>

    <%= f.submit "Next", class: "next" %>
  </header>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Full Name", class: "s_n" %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "s_e" %>

  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "s_p" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-enter Password", class: "s_rp" %>
  </div>

<% end %>

