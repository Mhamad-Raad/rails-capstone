<div>
  <h1><%= @group.name %></h1>
  <h2>Total: <%= number_to_currency(@total_amount) %></h2>

  <% @entities.each do |entity| %>
    <div>
      <span><%= entity.name %></span>
      <span><%= number_to_currency(entity.amount) %></span>
      <span><%= entity.created_at.strftime("%B %d, %Y") %></span>
    </div>
  <% end %>

  <%= link_to "Add a new entity", new_group_entity_path(@group), class: "btn" %>
</div>
